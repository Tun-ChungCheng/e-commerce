<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iancheng.ecommerce.mapper.OrderItemMapper">
    <!--    void createOrderItems(Integer orderId, List<OrderItem> orderItemList)    -->
    <insert id="createOrderItems">
        INSERT INTO order_item(order_id, product_id, quantity, amount) VALUES
        <foreach collection="orderItemList" item="orderItem" separator=",">
            (#{orderId}, #{orderItem.productId}, #{orderItem.quantity}, #{orderItem.amount})
        </foreach>
    </insert>
</mapper>